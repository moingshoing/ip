<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.7"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aris.ui.HelpWindow"
            prefWidth="400" prefHeight="500">

    <Label text="Help Guide" layoutX="150" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextArea fx:id="helpText" layoutX="20" layoutY="60" prefWidth="360" prefHeight="400"
              editable="false" wrapText="true"/>

    <Button text="Close" layoutX="160" layoutY="470" onAction="#handleClose"/>
</AnchorPane>
