<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="aris.ui.HelpController"
            prefHeight="400.0" prefWidth="600.0">
    <Label text="Help Guide" layoutX="150" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextArea layoutX="20" layoutY="60" prefWidth="360" prefHeight="400"
              editable="false" wrapText="true">
        <text>
            list                        → View all tasks
            todo X                      → Add a todo task
            deadline X /by DATE         → Add a deadline task
            event X /from DATE /to DATE → Add an event task
            mark N                      → Mark task N as done
            unmark N                    → Mark task N as not done
            delete N                    → Delete task N
            find X                      → Search tasks containing X
            bye                         → Exit the application
            help                        → Show this help page
        </text>
    </TextArea>

</AnchorPane>
